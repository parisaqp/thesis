        {*@
    <div class="row my-3 justify-content-center">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                @Html.Partial("~/Views/Shared/_RegionPartialView.cshtml", item)
            }
        }
    </div>
</section>
